<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        app:cardElevation="@dimen/margin_medium"
        app:cardBackgroundColor="@color/white_full">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_hot_swap_new_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="@dimen/margin_card_medium_2"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_news_01" />

            <org.mmtextview.components.MMTextView
                android:id="@+id/tv_news_founder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_hot_swap_new_image"
                android:layout_marginLeft="@dimen/margin_card_medium"
                android:text="Google News"
                android:textColor="@color/black_full"
                android:textSize="@dimen/text_regular_2x" />

            <org.mmtextview.components.MMTextView
                android:id="@+id/tv_news_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_news_founder"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="4"
                android:layout_marginLeft="@dimen/margin_card_medium"
                android:text="Google LLC" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_news_header"
                style = "?android:attr/ratingBarStyleSmall"
                android:layout_marginTop="@dimen/margin_card_medium_2"
                android:layout_marginLeft="@dimen/margin_card_medium"
                android:numStars = "5"
                android:rating   = "4"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>